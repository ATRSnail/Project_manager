<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/status_bar_bg</item>
        <item name="colorPrimaryDark">@color/status_bar_bg</item>
        <item name="colorAccent">@color/status_bar_bg</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="ThemeFullscreen" parent="BaseAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="text_333_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_333_16_draw_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/ic_setting_arrow</item>
    </style>

    <style name="text_999_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="view_A8A8A8_border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_lighter</item>
    </style>

    <style name="text_home_categy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_cccccc</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="linear_magin">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="footer_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_footer_bar_radio" parent="footer_bar">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
    </style>

</resources>
