<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_main_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:background="@color/color_039bfb"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_camera_front_white_24dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="13521468432"
            android:textColor="@color/text_color_white"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        style="@style/view_A8A8A8_border"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_password_manage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_password_management"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/ic_setting_arrow"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="密码管理"
        android:textColor="@color/color_666666"
        android:textSize="16sp" />

    <View style="@style/view_A8A8A8_border" />
</LinearLayout>