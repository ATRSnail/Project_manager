<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fill"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:background="@drawable/white_circle_5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_cate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/page_home_iocn_archive" />

            <TextView
                style="@style/text_home_categy"
                android:text="待办" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_meeting"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:background="@drawable/white_circle_5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/page_home_iocn_archive" />

            <TextView
                style="@style/text_home_categy"
                android:text="视频电话会议" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_talk"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:background="@drawable/white_circle_5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/page_home_iocn_archive" />

            <TextView
                style="@style/text_home_categy"
                android:text="对讲" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_repate"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:background="@drawable/white_circle_5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/page_home_iocn_archive" />

            <TextView
                style="@style/text_home_categy"
                android:text="回放" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>